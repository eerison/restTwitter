{% extends 'base.html.twig' %}

{% block body %}
    <h1>Twitter</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ twitter.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ twitter.name }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ twitter.text }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if twitter.date %}{{ twitter.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('twitter_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('twitter_edit', { 'id': twitter.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
